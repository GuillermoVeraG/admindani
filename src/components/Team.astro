---
import TeamItem from "@/components/TeamItem.astro";
interface teamProps {
  name: string;
  description: string;
  image: string;
}

const team: Array<teamProps> = [
  {
    name: "Administrador y Contador",
    description: "WEB DEVELOPER",
    image: "/images/staff-1.webp",
  },
  {
    name: "Equipo de Mantenimiento",
    description:
      "Sistema hidraulico, impermeabilizaci√≥n, electrico, pintura, entre otros.",
    image: "/images/staff-2.webp",
  },
  {
    name: "Equipo de Limpieza",
    description: "WEB DEVELOPER",
    image: "/images/staff-3.webp",
  },
];
---

<section
  id="Equipo"
  class="flex justify-center bg-[#141B25] px-0 py-20 relative w-full z-0"
>
  <div class="max-w-screen-xl mx-8 items-center justify-between">
    <div class="grid xs:grid-rows-4 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <div
        class="flex flex-col justify-end pt-2 md:pt-10 p-10 w-full max-w-[450px]"
      >
        <h4
          class="text-sm mb-1 font-semibold block uppercase text-white/70 leading-relaxed"
        >
          Team & Staff
        </h4>
        <h2 class="mb-6 font-semibold text-3xl text-white leading-tight">
          Our Team
        </h2>
        <p class="text-gray-400 font-medium text-base leading-normal">
          A small river named Duden flows by their place and supplies it with
          the necessary regelialia. It is a paradisematic country
        </p>

        <a
          type="button"
          class="text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-md text-sm px-5 py-2.5 text-center me-2 mb-2 mt-4 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 uppercase"
          href="/"
        >
          View all staff
        </a>
      </div>
      {
        team.map((teamItem) => (
          <TeamItem
            name={teamItem.name}
            description={teamItem.description}
            image={teamItem.image}
          />
        ))
      }
    </div>
  </div>
</section>
