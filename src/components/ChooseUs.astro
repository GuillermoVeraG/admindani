---
import ChooseUsItem from "./ChooseUsItem.astro";
interface chooseUpProps {
  name: string;
  description: string;
  icon: string;
}

const chooses: Array<chooseUpProps> = [
  {
    name: "Gestión Administrativa",
    description:
      "Administramos de manera eficiente, con alto sentido de responsabilidad y profesionalismo a través de un sistema contable de fácil acceso y con diferentes roles, que permite simplificar la comunicación con la administración y llevar registros.",
    icon: "/images/icons/admin4.svg",
  },
  {
    name: "Gestión Contable",
    description:
      "Contamos con un Software integral para la Propiedad Horizontal que potencia la gestión con mayor calidad de servicio, transparencia y organización en el conjunto residencial, atendiendo cada requerimiento contable.",
    icon: "/images/icons/contable1.svg",
  },
  {
    name: "Servicio Aseo",
    description:
      "Prestamos un servicio de personal de aseo general altamente capacitado que cuentan con sistemas avanzados para generar ambientes saludables y limpios.",
    icon: "/images/icons/aseo2.svg",
  },
  {
    name: "Servicio Mantenimiento",
    description:
      "Prestamos un servicio de personal de mantenimiento y reparación de daños menores o reparaciones mayores en zonas comunes, personal capacitado para trabajos en alturas, interiores y exteriores de fachadas.",
    icon: "/images/icons/mantenimiento1.svg",
  },
];
---

<section
  id="Escogernos"
  class="flex justify-center bg-white dark:bg-secondary-950 px-0 py-0 relative w-full z-0 group"
>
  <div
    class="absolute w-3/4 right-0 top-0 bottom-0 bg-primary-50 dark:bg-secondary-600 -z-10 h-full"
  >
  </div>
  <div
    class="transition-opacity opacity-0 group-[.scrollIsIn]:opacity-100 max-w-screen-xl mx-8 items-center justify-between relative w-full py-20"
  >
    <h4
      class="text-sm mb-1 font-semibold block uppercase text-primary-500 dark:text-primary-200 leading-relaxed text-center
      group-[.scrollIsIn]:animate-fade-in-up"
    >
      ¿Por que escogernos?
    </h4>
    <h2
      class="font-semibold text-3xl text-black/80 dark:text-white/90 leading-tight text-center
    group-[.scrollIsIn]:animate-fade-in-up"
    >
      Que nos diferencia como administración
    </h2>

    <div class="flex flex-col md:grid md:grid-cols-2 gap-8">
      <div class="pt-2 lg:pt-10 lg:pl-10 md:-mt-10">
        <div
          class="bg-[url('/images/about-3.webp')]
              h-full min-h-[350px] xs:max-h-[400px] md:h-full w-full
              bg-contain bg-no-repeat bg-center
              self-stretch items-center
              group-[.scrollIsIn]:animate-slide-in-left"
        >
        </div>
      </div>
      <div class="pt-2 lg:pt-10">
        {
          chooses.map((choose, index) => (
            <ChooseUsItem
              icon={choose.icon}
              name={choose.name}
              description={choose.description}
              delay={index * 200}
            />
          ))
        }
      </div>
    </div>
  </div>
</section>
