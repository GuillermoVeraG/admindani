  <div class="absolute w-3/4 right-0 top-0 bottom-0 bg-[#e8f1ff] -z-10 h-full">
  </div>
  <div
    class="max-w-screen-xl mx-8 items-center justify-between relative w-full py-20"
  >
    <h4
      class="text-sm mb-1 font-semibold block uppercase text-blue-500 leading-relaxed text-center"
    >
      WHY CHOOSE US?
    </h4>
    <h2
      class="mb-6 font-semibold text-3xl text-black/80 leading-tight text-center"
    >
      Top Reason Why We Need to Get Virtual Assistant
    </h2>

    <div class="flex flex-col md:grid md:grid-cols-2 gap-8">
      <div class="pt-2 lg:pt-10 lg:pl-10 md:-mt-10">
        <div
          class="bg-[url('/images/about-3.webp')]
              h-full min-h-[350px] xs:max-h-[400px] md:h-full w-full
              bg-contain bg-no-repeat bg-center
              self-stretch items-center"
        >
        </div>
      </div>
      <div class="pt-2 lg:pt-10">
        {
            chooses.map((choose) => (
            <div class="w-full p-6 bg-transparent flex flex-row justify-start items-center">
                <div class="p-5 bg-blue-500 mr-4 rounded-full">
                    <span class=`font-flaticon ${choose.icon} text-4xl text-white`></span>
                </div>
                <div>
                    <h5 class="text-xl text-black/80 font-semibold leading-tight dark:text-white">{choose.name}</h5>
                    <p class="text-gray-400 font-medium text-base leading-normal">{choose.description}</p>
                </div>
            </div>
            ))
        }
      </div>
    </div>
  </div>
</section>
