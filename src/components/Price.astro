---
interface priceProps {
  name: string;
  price: number;
  options: string[];
}

const prices: Array<priceProps> = [
  {
    name: "Administrador y Contador",
    price: 45,
    options: ["Upto 50 hours Monthly", "2 Assistants available"],
  },
  {
    name: "Equipo de Mantenimiento",
    price: 79,
    options: ["Upto 50 hours Monthly", "2 Assistants available"],
  },
  {
    name: "Equipo de Limpieza",
    price: 109,
    options: [
      "Upto 50 hours Monthly",
      "2 Assistants available",
      "others available",
      "others available",
    ],
  },
];
---

<section
  id="Precios"
  class="flex justify-center bg-primary-50 px-0 py-10 relative w-full z-0 group"
>
  <div
    class="transition-opacity opacity-0 group-[.scrollIsIn]:opacity-100 max-w-screen-xl mx-8 items-center justify-between"
  >
    <h4
      class="text-sm mb-1 font-semibold block uppercase text-primary-600 leading-relaxed tracking-[6px] text-center"
    >
      planes & precios
    </h4>
    <h2
      class="font-bungee mb-6 font-semibold text-2xl text-black/80 leading-tight text-center"
    >
      Nuestros mejores ofertas
    </h2>

    <div class="grid xs:grid-rows-3 md:grid-cols-3 gap-8 mt-4">
      {
        prices.map(({ price, name, options }) => (
          <div class="w-full p-6 bg-white border border-gray-200 rounded-lg shadow text-center relative">
            <span>
              <sup class="font-inter text-2xl text-gray-400 relative -top-4">
                $
              </sup>
              <span class="font-inter text-6xl text-primary-600 font-semibold">
                {price}
              </span>
              <sub class="-bottom-1">/mo</sub>
              <span class="font-bungee mb-5 text-black text-base font-bold border-b-2 pt-3 pb-2 block">
                {name}
              </span>
              <ul class="mb-20">
                {options.map((option) => (
                  <li class="flex items-center">
                    <svg
                      class="flex-shrink-0 w-4 h-4 text-primary-600 dark:text-primary-500"
                      aria-hidden="true"
                      xmlns="http://www.w3.org/2000/svg"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z" />
                    </svg>
                    <span class="text-base font-normal leading-tight text-gray-600 dark:text-gray-400 ms-3">
                      {option}
                    </span>
                  </li>
                ))}
              </ul>
            </span>
            <a
              type="button"
              class="font-bungee absolute bottom-0 left-3 w-[90%] text-white bg-primary-500 hover:bg-primary-600 focus:outline-none focus:ring-4 focus:ring-primary-300 font-medium rounded-md text-sm px-5 py-2.5 text-center mb-2 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 uppercase"
              href="/"
            >
              get started
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
