---
interface priceProps {
  name: string;
  price: string;
  unidad: string;
  options: string[];
}

const prices: Array<priceProps> = [
  {
    name: "Administración Básica",
    price: "45",
    unidad: "por Unidad",
    options: [
      "Representación Legal abscrita",
      "Archivos contables y administrativos",
      "Software integral para P.H.",
      "Atención ante emergencias",
      "Asistencias virtuales y presenciales",
      "Estados Financieros con firma contador público",
    ],
  },
  {
    name: "Administración Premium",
    price: "65",
    unidad: "por Unidad",
    options: [
      "Representación Legal abscrita",
      "Archivos contables y administrativos",
      "Atención ante emergencias",
      "Asistencias virtuales y presenciales",
      "Asesoria y asistencia contable",
      "Software contable y administrativo para P.H.",
      "Estados Financieros con firma contador público",
    ],
  },
  {
    name: "Limpieza",
    price: "300",
    unidad: "Mensual",
    options: [
      "8 visitas (2 semanales de 4hr c/u)",
      "1 lavado de zonas comunes",
    ],
  },
];
---

<section
  id="Precios"
  class="flex justify-center bg-primary-50 px-0 py-10 relative w-full z-0 group"
>
  <div
    class="transition-opacity opacity-0 group-[.scrollIsIn]:opacity-100 max-w-screen-xl mx-8 items-center justify-between"
  >
    <h4
      class="text-sm mb-1 font-semibold block uppercase text-primary-600 leading-relaxed tracking-[6px] text-center"
    >
      servicios
    </h4>
    <h2
      class="font-bungee mb-6 font-semibold text-2xl text-black/80 leading-tight text-center"
    >
      planes & precios
    </h2>

    <div class="grid xs:grid-rows-3 md:grid-cols-3 gap-8 mt-4">
      {
        prices.map(({ price, name, unidad, options }, index) => (
          <div
            class={`w-full p-6 ${index % 2 != 0 ? "bg-gray-200/60" : "bg-white"} border border-gray-200 rounded-lg shadow text-center relative`}
          >
            <div
              class={`${index % 2 != 0 ? "" : "hidden"} uppercase absolute w-fit bg-primary-600 font-bungee tracking-widest text-white text-xs px-4 py-2 rounded-2xl -top-4 left-1/2 -translate-x-1/2`}
            >
              recomendado
            </div>

            <div class="pt-4">
              <sup class="font-inter text-2xl text-gray-400 relative -top-4">
                $
              </sup>
              <span class="font-inter text-5xl text-primary-600 font-normal">
                {price}
              </span>
              <span class="text-3xl text-primary-600 -ml-4">.000</span>
              <div class="-bottom-1"> {unidad}</div>
              <span class="font-bungee mb-5 text-black text-base font-bold border-b-2 border-primary-600/30 pt-3 pb-2 block">
                {name}
              </span>
              <ul class="mb-20 flex flex-col justify-center items-start gap-2">
                {options.map((option) => (
                  <li class="flex items-center">
                    <svg
                      class="flex-shrink-0 w-4 h-4 text-primary-600 dark:text-primary-500"
                      aria-hidden="true"
                      xmlns="http://www.w3.org/2000/svg"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z" />
                    </svg>
                    <span class="text-left text-base font-normal leading-tight text-gray-800 dark:text-gray-400 ms-3">
                      {option}
                    </span>
                  </li>
                ))}
              </ul>
            </div>
            <a
              type="button"
              class="font-bungee tracking-widest absolute bottom-0 left-3 w-[90%] text-white bg-primary-500 hover:bg-primary-600 focus:outline-none focus:ring-4 focus:ring-primary-300 font-medium rounded-md text-sm px-5 py-2.5 text-center mb-2 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 uppercase"
              href="/"
            >
              contactanos
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
