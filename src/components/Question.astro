---

<section
  id="Preguntas"
  class="flex justify-center bg-white dark:bg-secondary-950 px-0 py-20 relative w-full z-0 group"
>
  <div
    class="w-full transition-opacity opacity-0 group-[.scrollIsIn]:opacity-100 max-w-screen-xl mx-8 items-center justify-between"
  >
    <div class="flex flex-col md:grid md:grid-cols-2 gap-8">
      <div class="pt-2 lg:pt-10 lg:pl-10 md:-mt-10">
        <div
          class="bg-question
          h-full min-h-[350px] xs:max-h-[400px] md:h-full w-full
          bg-cover bg-no-repeat bg-center
          self-stretch items-center rounded-lg"
        >
        </div>
      </div>
      <div class="pt-2 lg:pt-10">
        <h4
          class="text-sm mb-1 font-semibold block uppercase text-primary-600 leading-relaxed tracking-[6px]"
        >
          FAQ
        </h4>
        <h2
          class="font-bungee mb-6 font-semibold text-2xl text-black/80 dark:text-white/80 leading-tight"
        >
          Preguntas y Respuestas
        </h2>

        <div
          class="flex flex-col justify-center items-center gap-0 mt-6 w-full"
        >
          {
            questions.map(({ question, answer }, index) => {
              const first = index == 0 ? "rounded-t-lg" : "";

              return (
                <details
                  class={`bg-white w-full flex flex-col justify-center items-center cursor-pointer border border-secondary-950/20 hover:border-primary-700 open:border-primary-700 group/faq ${first}`}
                >
                  <summary
                    class={`bg-secondary-50 w-full flex flex-row justify-center items-center p-4 relative group-hover/faq:bg-primary-700 group-open/faq:bg-primary-700 ${first}`}
                  >
                    <h3 class="font-bungee w-full text-lg font-light text-left text-pretty capitalize text-secondary-800 group-hover/faq:text-secondary-50 group-open/faq:text-secondary-50">
                      {question}
                    </h3>
                    <div class="absolute top-auto bottom-auto left-auto right-4">
                      <button
                        data-open="false"
                        class="butOpenClose w-4 h-4 flex justify-center items-center
                      before:content-[''] before:content-center  before:bg-secondary-950/60 group-hover/faq:before:bg-white group-open/faq:before:bg-white before:w-4 before:h-0.5
                      after:content-[''] after:content-center after:bg-secondary-950/60 group-hover/faq:after:bg-white group-open/faq:after:bg-white after:w-0.5 after:h-4 after:-translate-x-2 after:transition-transform after:duration-500"
                      />
                    </div>
                  </summary>
                  <div class="w-full max-w-[80%] mx-auto mb-8 pt-8">
                    <p class="text-lg font-light text-left text-secondary-800/90 dark:text-secondary-100/70">
                      {answer}
                    </p>
                  </div>
                </details>
              );
            })
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  details[open] summary button::after {
    transform: rotate(90deg) translateY(0.5rem);
    transform-origin: center;
  }
</style>
