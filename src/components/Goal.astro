---

<section
  id="Logros"
  class="flex flex-col justify-center items-center bg-white dark:bg-secondary-950 p-0 pb-0 relative w-full z-0 group scrollIsIn"
>
  <div
    class="transition-opacity opacity-0 group-[.scrollIsIn]:opacity-100 max-w-screen-xl items-center justify-between relative w-full py-20"
  >
    <h4
      class="text-sm mb-1 font-semibold block uppercase text-primary-600 leading-relaxed tracking-[6px] text-center"
    >
      Logros
    </h4>
    <h2
      class="font-stretchpro uppercase font-semibold text-xl text-black/80 dark:text-white/90 leading-tight text-center"
    >
      Nuestros logros m치s recientes
    </h2>
    <div
      class="grid xs:grid-rows-4 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-8 mx-6"
    >
      {
        goals.map((goal, index) => (
          <GoalItem
            name={goal.name}
            dated={goal.dated}
            image={goal.image}
            delay={index * 200}
          />
        ))
      }
    </div>
  </div>
</section>
