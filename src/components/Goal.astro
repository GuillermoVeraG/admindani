---
import GoalItem from "@/components/GoalItem.astro";

interface goalProps {
  name: string;
  dated: string;
  image: string;
}

const goals: Array<goalProps> = [
  {
    name: "Equipo Administrativo",
    dated: "April 12, 2020",
    image: "/images/staff-1.webp",
  },
  {
    name: "Equipo Contable",
    dated: "April 12, 2020",
    image: "/images/staff-2.webp",
  },
  {
    name: "Equipo de Mantenimiento",
    dated: "April 12, 2020",
    image: "/images/staff-3.webp",
  },
  {
    name: "Equipo de Limpieza",
    dated: "April 12, 2020",
    image: "/images/about-1.webp",
  },
];
---

<section
  id="Logros"
  class="flex flex-col justify-center items-center bg-white dark:bg-secondary-950 p-0 pb-0 relative w-full z-0 group"
>
  <div
    class="transition-opacity opacity-0 group-[.scrollIsIn]:opacity-100 max-w-screen-xl items-center justify-between relative w-full py-20"
  >
    <h4
      class="text-sm mb-1 font-semibold block uppercase text-primary-500 leading-relaxed text-center"
    >
      Logros
    </h4>
    <h2
      class="font-semibold text-3xl text-black/80 dark:text-white/90 leading-tight text-center"
    >
      Nuestros logros m√°s recientes
    </h2>
    <div
      class="grid xs:grid-rows-4 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-8 mx-6"
    >
      {
        goals.map((goal, index) => (
          <GoalItem
            name={goal.name}
            dated={goal.dated}
            image={goal.image}
            delay={index * 200}
          />
        ))
      }
    </div>
  </div>
</section>
